{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "process",
            "command": "bash",
            "args": [
                "--init-file",
                "${workspaceFolder}/.vscode/kos_make.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Dreamcast: Make Disc (ISO/CDI via mkdcdisc)",
            "type": "process",
            "command": "bash",
            "args": [
                "${workspaceFolder}/tools/dreamcast/make_disc.sh"
            ],
            "options": {
                "env": {
                    "DC_DATA_DIR": "${workspaceFolder}/data/AITD1_CD"
                }
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Dreamcast: Clean (CMake)",
            "type": "process",
            "command": "bash",
            "args": [
                "--init-file",
                "${workspaceFolder}/.vscode/kos_clean.sh"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Dreamcast: Build + Make Disc",
            "dependsOn": [
                "Build",
                "Dreamcast: Make Disc (ISO/CDI via mkdcdisc)"
            ],
            "problemMatcher": []
        }
    ]
}